generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  owner
  manager
  viewer
  client
}

enum ProjectStatus {
  active
  paused
  completed
}

enum ReportStatus {
  draft
  published
}

model Agency {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  primaryEmail String
  timezone    String?
  currency    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users   User[]
  clients Client[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  initials  String?
  passwordHash String?
  role      UserRole
  agencyId  String
  clientId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agency Agency @relation(fields: [agencyId], references: [id], onDelete: Cascade)
  client Client? @relation("ClientUsers", fields: [clientId], references: [id])

  @@index([agencyId])
  @@index([clientId])
}

model Client {
  id           String   @id @default(cuid())
  agencyId     String
  name         String
  company      String?
  contactEmail String
  contactPhone String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  agency   Agency   @relation(fields: [agencyId], references: [id], onDelete: Cascade)
  projects Project[]
  users    User[]   @relation("ClientUsers")

  @@index([agencyId])
}

model Project {
  id        String         @id @default(cuid())
  clientId  String
  name      String
  status    ProjectStatus
  notes     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  client  Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  reports Report[]

  @@index([clientId])
}

model Report {
  id          String   @id @default(cuid())
  projectId   String
  period      String
  summary     String
  status      ReportStatus @default(draft)
  publishedAt DateTime?
  spend       Float?
  revenue     Float?
  leads       Int?
  cpa         Float?
  roas        Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  whatWasDone Json?
  nextPlan    Json?

  project    Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  publicLink PublicReportLink?

  @@index([projectId])
}

model PublicReportLink {
  id        String   @id @default(cuid())
  reportId  String   @unique
  publicId  String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  expiresAt DateTime?

  report Report @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([reportId])
}
